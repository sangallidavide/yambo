# @configure_input@

# -----------------------------
# compilation rules

.SUFFIXES :
.SUFFIXES : .o .c .F @F90SUFFIX@

.F.o:
	@rm -f $*@F90SUFFIX@
	(eval $(FPP) $(IFLAGS) $(dopts) $*.F > $*@F90SUFFIX@ ) > /dev/null
	(eval $(FC)  $(FCFLAGS) -c $*@F90SUFFIX@ ) > /dev/null
	@rm -f $*@F90SUFFIX@

