# -----------------------------
# compiler definitions

make             = @MAKE@
CC               = @CC@
CFLAGS           = @CFLAGS@ $(IFLAGS)
CPP              = @CPP@
FPP              = @FPP@
CPPFLAGS         = @CPPFLAGS@ $(IFLAGS)
FC               = @FC@
MPIF90           = @FC@
F90FLAGS         = @FCFLAGS@ @OPENMPLIBS@ $(IFLAGS)
F77              = @F77@
FFLAGS           = @FFLAGS@
LD               = @FC@
LDFLAGS          = @FCFLAGS@ @OPENMPLIBS@ $(IFLAGS)
AR               = @AR@
ARFLAGS          = @AR_FLAGS@
RANLIB           = echo
#RANLIB           = @ranlib@


# -----------------------------
# libraries

